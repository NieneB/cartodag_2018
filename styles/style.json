{
    "version": 8,
    "name": "data",
    "sources": {
        "border":{
            "type": "vector",
            "scheme": "tile",
            "tiles": [
                "https://vt1.maps.geocoders.nl/cartodag/{z}/{x}/{y}.pbf",
                "https://vt2.maps.geocoders.nl/cartodag/{z}/{x}/{y}.pbf",
                "https://vt3.maps.geocoders.nl/cartodag/{z}/{x}/{y}.pbf",
                "https://vt4.maps.geocoders.nl/cartodag/{z}/{x}/{y}.pbf"
            ]
        }
    },
    "layers": [
        {
            "id": "border",
            "type": "line",
            "source": "border",
            "source-layer":"border",
            "paint":{
                "line-color": "#000",
                "line-width": [
                    "interpolate", ["linear"], ["zoom"],
                    10,1,
                    20,3
                ]
            }
        },
        {
            "id": "special_shelters",
            "type": "fill",
            "source": "border",
            "source-layer":"shelters_info",
            "filter": ["==",  "facebook", ""],
            "paint":{
                "fill-color":"#ee0000"
            }
        },
        {
            "id" : "one_shelter",
            "type": "fill-extrusion",
            "source":"border",
            "source-layer": "shelters_info",
            "filter":["==", "id", ""],
            "paint":{
                "fill-extrusion-color": "#000",
                "fill-extrusion-height": 5
            }
        },
        {
            "id": "all_shelters",
            "type": "line",
            "source": "border",
            "source-layer":"shelters",
            "minzoom":12,
            "maxzoom":21,
            "paint":{
                "line-color": "#939393",
                "line-width": [
                    "interpolate", ["linear"], ["zoom"],
                    13, 0.01,
                    20,0.5
                ]
            }
        }
    ]
}
